# LLM Configuration
# Pour activer/désactiver un LLM, définir ENABLE_[LLM]=true/false

# OpenAI
ENABLE_OPENAI=true
OPENAI_API_KEY=your_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_ORGANIZATION=your_org_here

# Anthropic
ENABLE_ANTHROPIC=false
ANTHROPIC_API_KEY=your_key_here
ANTHROPIC_MODEL=claude-2

# PaLM
ENABLE_PALM=false
PALM_API_KEY=your_key_here
PALM_MODEL=models/text-bison-001

# Llama
ENABLE_LLAMA=false
LLAMA_MODEL_PATH=/path/to/model
LLAMA_N_CTX=2048
LLAMA_N_THREADS=4

# Mistral
ENABLE_MISTRAL=true
MISTRAL_API_KEY=your_key_here
MISTRAL_MODEL=mistral-medium

# Deepseek
ENABLE_DEEPSEEK=false
DEEPSEEK_API_KEY=your_key_here
DEEPSEEK_MODEL=deepseek-chat
